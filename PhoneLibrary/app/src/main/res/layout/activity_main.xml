<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/book"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/see_all"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="See available books"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/current"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Current Reading book"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/see_all"
        app:layout_constraintStart_toStartOf="@+id/see_all"
        app:layout_constraintTop_toBottomOf="@+id/see_all" />

    <Button
        android:id="@+id/wishList"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Wish List"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/readBooks"
        app:layout_constraintStart_toStartOf="@+id/readBooks"
        app:layout_constraintTop_toBottomOf="@+id/readBooks" />

    <Button
        android:id="@+id/favourite"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="See favourite books"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/wishList"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/wishList"
        app:layout_constraintTop_toBottomOf="@+id/wishList" />

    <Button
        android:id="@+id/about"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="About"
        app:layout_constraintEnd_toEndOf="@+id/favourite"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/favourite"
        app:layout_constraintTop_toBottomOf="@+id/favourite" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Phone Library "
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:text="Designed by Tabu Technologies"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/readBooks"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Already read books"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/current"
        app:layout_constraintStart_toStartOf="@+id/current"
        app:layout_constraintTop_toBottomOf="@+id/current" />
</androidx.constraintlayout.widget.ConstraintLayout>