<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.phonelibrary">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WebViewActivity"
            android:label="@string/web_view"/>
        <activity android:name=".AddToFavouritesActivity"
            android:label="@string/favourites"/>
        <activity android:name=".CurrentReadingActivity"
            android:label="@string/current"/>
        <activity android:name=".WantToReadActivity"
            android:label="@string/Want_to_read"/>
        <activity android:name=".AlreadyReadActivity"
            android:label="@string/Alredy_ready"/>
        <activity android:name=".BookActivity"
            android:label="@string/book_details"/>
        <activity android:name=".AllBooksActivity"
            android:label="@string/all_books_activity"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>